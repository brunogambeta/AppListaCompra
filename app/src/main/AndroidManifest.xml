<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.brunogambeta.applistacompra">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_app_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppListaCompra">
        <activity
            android:name=".activity.AdicionarListaActivity"
            android:parentActivityName=".activity.HomeActivity" />
        <activity
            android:name=".activity.AdicionarProdutosActivity"
            android:parentActivityName=".activity.ProdutosActivity" />
        <activity
            android:name=".activity.ProdutosActivity"
            android:parentActivityName=".activity.HomeActivity" />
        <activity
            android:name=".activity.NovaListaCompraActivity"
            android:parentActivityName=".activity.HomeActivity" />
        <activity android:name=".activity.HomeActivity" />
        <activity android:name=".activity.AutenticacaoActivity" />
        <activity android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>